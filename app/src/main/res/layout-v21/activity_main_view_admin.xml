<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity_view_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#E91E63">

            <TextView
                android:id="@+id/title_admin"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#C61652"
                android:gravity="center"
                android:text="Admin Side"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="160dp"
                android:layout_height="129dp"
                android:layout_gravity="center"
                android:background="#E91E63"
                android:src="@drawable/logo"
                android:contentDescription="TODO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#C61652"
            android:orientation="vertical">

            <Button
                android:id="@+id/view_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="View Users"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/view_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="View Orders"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/view_payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="View Payments"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/view_contactus_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="View Contact Us Messages"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/view_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="View Rating"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/a_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>