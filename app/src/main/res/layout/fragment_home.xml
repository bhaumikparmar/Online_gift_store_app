<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="109dp">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#C61652"
            android:gravity="center_horizontal"
            android:text="Categories"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="vertical"
            android:queryHint="Search"
            android:iconifiedByDefault="false">

            <ListView
                android:id="@+id/list_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </SearchView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">


                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="165dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/birthday_gifts_i"
                        android:background="#100F0F"
                        android:padding="10dp"
                        app:layout_gravity="center"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="Birthday Gifts"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="165dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:background="#100F0F"
                        android:padding="10dp"
                        android:src="@drawable/anniversary_gifts_i"
                        app:layout_column="1"
                        app:layout_gravity="center"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="193dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:gravity="center"
                        android:text="Anniversary Gifts"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        app:layout_column="1"
                        app:layout_row="1" />

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="165dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="50dp"
                        android:background="#100F0F"
                        android:padding="10dp"
                        android:src="@drawable/occasions_gifts_i"
                        app:layout_column="0"
                        app:layout_gravity="center"
                        app:layout_row="1" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="Occasions Gifts"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <ImageView
                        android:id="@+id/i4"
                        android:layout_width="165dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:background="#100F0F"
                        android:padding="10dp"
                        android:src="@drawable/cakes_i"
                        app:layout_column="1"
                        app:layout_gravity="center"
                        app:layout_row="1" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="193dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="Cakes"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        app:layout_column="1"
                        app:layout_row="2" />

                    <ImageView
                        android:id="@+id/i5"
                        android:layout_width="165dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="50dp"
                        android:background="#100F0F"
                        android:padding="10dp"
                        android:src="@drawable/flowers_i"
                        app:layout_column="0"
                        app:layout_gravity="center"
                        app:layout_row="2" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="Flowers"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        app:layout_column="0"
                        app:layout_row="3" />

                    <ImageView
                        android:id="@+id/i6"
                        android:layout_width="165dp"
                        android:layout_height="175dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:background="#100F0F"
                        android:padding="10dp"
                        android:src="@drawable/combo_i"
                        app:layout_column="1"
                        app:layout_gravity="center"
                        app:layout_row="2" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="Combos"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        app:layout_column="1"
                        app:layout_row="3" />

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>