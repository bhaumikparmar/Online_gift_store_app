<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    tools:context=".MainActivity_forgot_pass1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fpback"
                android:layout_width="63dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#C61652"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/title"
                android:layout_width="302dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:background="#C61652"
                android:gravity="center"
                android:text="Forgot Password"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="205dp"
            android:layout_margin="50dp"
            android:layout_marginTop="20dp"
            android:background="#C61652"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/user2"></ImageView>

                <TextView
                    android:id="@+id/contrycode"
                    android:layout_width="46dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:text="+91"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/user"
                    android:layout_width="204dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:hint="Enter Phone Number"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"></EditText>
            </LinearLayout>

            <Button
                android:id="@+id/get_otp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="Get OTP"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#C61652"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_textsms_24" />

                <EditText
                    android:id="@+id/otp"
                    android:layout_width="242dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter OTP"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"></EditText>
            </LinearLayout>

            <Button
                android:id="@+id/send_otp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:backgroundTint="#E91E63"
                android:text="submit"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
