<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    tools:context=".MainActivity_cancel_order">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="149dp"
                android:layout_height="127dp"
                android:layout_gravity="bottom|center"
                android:src="@drawable/logo" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logouttext"
                android:layout_width="258dp"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#C61652"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="15dp"
                android:text="@string/are_you_sure_cancel_your_order"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="normal"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#C61652"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/can_yes"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#DC1030E1"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_baseline_check_24" />

            <ImageView
                android:id="@+id/can_no"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:backgroundTint="#E1F10707"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_baseline_close_24" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>